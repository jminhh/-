<!-- 기부 모달창 -->
<div class="modal fade" id="donationModal"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row align-items-center">
                    <div class="col-sm-2"></div>
                    총
                    <label id="donated_count" for="message-text" class="col-form-label"></label>
                    개가 기부되었고
                    <label id="need_more" for="message-text" class="col-form-label"></label>
                    개가 더 필요합니다.
                    <div class="col-sm-2"></div>

                    <label for="inputDonate_count" class="col-form-label col-sm-5">기부할 헌혈증 개수 입력 : </label>
                    <input  type="text" class="form-control col-sm-2" id="donate_count" name="donate_count"/> 
                    <label class="col-form-label col-sm-2">개</label>
                    <div class="col-sm-2"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="donation" type="button" class="btn btn-secondary">기부하기</button>
                <button id="donationClose" type="button" class="btn btn-primary" data-dismiss="modal">닫기</button>
            </div>
        </div>
    </div>
</div>

<script>
    $('#donationModal').on('hidden.bs.modal', function (e) {
        $(this).find('donate_count')[0].reset()
    });
    var need_more;
    var req_user_id;
    var need_count;
    var nickname;
    var donate_count;
    var used_place;
    var id;
    var bdcard_count;
    //모달 창에 나타나는 정보 표시
    $('#donationModal').on('show.bs.modal', function (event) {
        var modal = $(this)

        var button = $(event.relatedTarget)
        id = button.data('id');
        req_user_id = button.data('req_user_id')
        need_count = button.data('need_count')
        nickname = button.data('nickname')
        donated_count = button.data('donated_count')
        used_place = button.data('used_place')
        bdcard_count = button.data('bdcard_count');

        need_more = need_count - donated_count;

        modal.find('.modal-title').text(nickname + '님에게 기부하기');
        modal.find('#donated_count').text(donated_count).css('color', 'red');
        modal.find('#need_more').text(need_more).css('color', 'red');

    })

    $('.donation').click(function () {
        if ("<%=locals.user_id%>" == $(this).attr('data-req_user_id')) {
            $('#donationModal').modal('dispose')
            alert('asdf')
        }
    })
    

    //기부요청
    $('#donation').click(function () {
        var bdcard = "<%=locals.bdcard_count%>";
        var donate_count = Number($("#donate_count").val());
        if (donate_count == 0) {
            alert('0개를 기부하실 수 없습니다. 다시 입력해주세요.');
            return;
        }
        if (bdcard == 0) {
            alert('등록한 헌혈증이 0개입니다. 새로운 헌혈증을 등록해주세요.');
            return;
        }
        if (bdcard < donate_count) {
            alert('등록한 헌혈증이 ' + donate_count + ' 개 미만입니다. 개수를 다시 입력해주세요.');
            return;
        }
        if (donate_count > need_more) {
            alert('필요한 개수를 초과하여 입력하였습니다. 개수를 다시 입력해주세요.');
            return;
        }



        // ajax로 기부 처리
        if (donate_count <= need_more) {
            $.ajax({
                url: '/blood/blood_donation',
                dataType: 'json',
                type: 'POST',
                data: { 
                    id: id,
                    req_user_id: req_user_id,
                    nickname: nickname,
                    donate_count: Number($('#donate_count').val()),
                    need_count: need_count,
                    donated_count: donated_count,
                    used_place: used_place,
                    bdcard_count: bdcard_count
                },
                success: function (data) {
                    alert(donate_count + '개의 헌혈증이 기부되었습니다. 감사합니다!');
                    
                    $('#donationModal').find('#donated_count').text(data.donated_count).css('color', 'red');
                        $('#donationModal').find('#need_more').text(data.need_more).css('color', 'red');
                    $('#bcount' + id).text(data.donated_count + '/' + need_count);
                    
                    $('#' + id).attr('data-need_count', data.need_count);
                    $('#' + id).attr('data-donated_count', data.donated_count);
                    $('#' + id).attr('data-bdcard_count', data.bdcard_count);

                    if (data.is_finished) {
                        alert('해당 기부요청글의 기부가 완료되었습니다!');
                       
                    }
                    $('#donationClose').trigger("click");
                    $('#donationClose').bind("click");
                },
                error: function (err) {
                    console.log(err);
                }
            });
        }
        });
</script>
