<body>  
    <%- include("header_login.ejs")%>
    <p></p>
    <p>a</p>
    <p>a</p>
    <main>
        <div class="container text-center">
        <%if(Object.keys(reqboards).length != 0){%> <!--올린 기부요청글이 있을 때-->
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input bg-success" id="defaultUnchecked">
                                <label class="custom-control-label" for="defaultUnchecked"></label>
                            </div>
                        </th>
                        <th>번호</th>
                        <th>제목</th>
                        <th>날짜</th>
                        <th>기부된 개수/필요한 개수</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <%for(var rb of reqboards){
                    %>
                    <tr>
                        <th>
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input bg-success" id="defaultUnchecked">
                                <label class="custom-control-label" for="defaultUnchecked"><%=rb.id%></label>
                            </div>
                        </th>
                        <td><%=rb.id%></td>
                        <td><%=rb.title%></td>

                        <% 
                        function getFormatDate (date) { 
                            var year = date.getFullYear();
                            var month = (1 + date.getMonth());
                            month = month >= 10 ? month : '0' + month;
                            var day = date.getDate();
                            day = day >= 10 ? day : '0' + day;
                            var hours = date.getHours()
                            var minutes = date.getMinutes()
                            var seconds = date.getSeconds();

                            if (hours < 10)
                                hours = "0" + hours;

                            if (minutes < 10)
                                minutes = "0" + minutes;

                            if (seconds < 10)
                                seconds = "0" + seconds;

                            return year + '-' + month + '-' + day + '\n' + hours + ':' + minutes + ':' + seconds; 
                        } %>
                        <td><%=getFormatDate(rb.reg_date)%></td>

                        <td id="bcount<%=rb.id%>"><%=rb.donated_count%>/<%=rb.need_count%></td>
                        <%if(rb.is_finished){%>
                            <td style="color: green">기부완료</td>
                        <%}else{%>
                            <td></td>
                        <%}%>
                        <%if(rb.is_all_used){%>
                            <td style="color: green">사용완료</td>
                        <%}else{%>
                            <%if(rb.is_finished){%>
                                <td class="use" id="<%='use' + rb.id%>">
                                    <button id="<%=rb.id%>" type="button" class="btn-success btn-sm" 
                                        data-need_count="<%=rb.need_count%>">사용하기</button>
                                </td>
                            <%}else{%>
                                <td></td>
                            <%}%>
                        <%}%>
                        <td class="delete">
                            <button id="<%=rb.id%>" type="button" class="btn-success btn-sm">삭제
                            </button>
                        </td>
                    </tr>
                    <%}%>
                </tbody>
            </table>
                
            <div style="float: right">            
                <a id="blood_req" href='/blood/blood_request' class="btn btn-success">선택항목 삭제</a>            
            </div>
        <%}else{%>
            <div><h4>등록한 기부요청글이 없습니다!</h4></div>
        <%}%>
        </div>
    </main>



<script>
    $('.use button').click(function(){
        var button = $(this);
        var id = button.attr('id');
        // var req_user_id = button.data('req_user_id');
        var need_count = button.data('need_count');
     
        $.ajax({
            url: '/blood/blood_use',
            dataType: 'json',
            type: 'POST',
            data: { 
                id: id
            },
            success: function (data) {
                alert(need_count + '개의 헌혈증이 사용되었습니다');
                $('#use' + id).text('사용완료').css('color', 'green');
            },
            error: function (err) {
                console.log(err);
            }
        });
    });
    
</script>

  
    
</body>

