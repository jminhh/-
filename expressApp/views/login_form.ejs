  <script>
      function isLoginFailed() {
          var href = window.location.href;
          var login = href.split('?')[1].split('=')[1];
          if (login == 'fail'){
              alert('아이디 혹은 비밀번호를 잘못 입력하셨습니다!');
              history.replaceState({}, null, location.pathname);
          }
      }
