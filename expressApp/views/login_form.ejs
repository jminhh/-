  <body class="text-center" onload="isLoginFailed();">
      <%- include("header_logout.ejs")%>

    <form class="form-signin" method="post" action="/users/login_do">
        <a href="/"><img src="/images/blood-logo.jpg" width="172" height="172"></a>

      <label for="inputEmail" class="sr-only">Email address</label>
